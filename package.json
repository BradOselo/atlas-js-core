{
  "name": "atlas-sdk-core",
  "version": "1.6.3",
  "description": "Atlas JavaScript SDK Core for Zalando Checkout, Guest Checkout, and Catalog APIs.",
  "main": "lib/index.node.js",
  "browser": "lib/index.js",
  "files": [
    "src/",
    "lib/"
  ],
  "keywords": [
    "atlas",
    "guest checkout",
    "checkout",
    "catalog",
    "api",
    "extensions"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zalando-incubator/atlas-js-core.git"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint src test",

    "clean": "rm -rf lib",
    "dev:build": "npm run clean && ./node_modules/.bin/webpack --config webpack.config.dev.js --watch",
    "production:build": "npm run clean && ./node_modules/.bin/webpack --config webpack.config.js",

    "david": "./node_modules/.bin/david",
    "check": "nsp check package",
    "cover": "nyc --reporter lcov --reporter text npm run test",
    "cover:check": "nyc check-coverage",
    "cover:report-coverage": "npm run cover && cat ./coverage/lcov.info | codecov",

    "test": "FORCE_COLOR=t ./node_modules/.bin/ava --verbose | tap-notify | tap-diff",
    "tdd": "ava --watch",
    "validate": "npm run lint && npm test",

    "prepare": "npm run validate && npm run production:build && npm run check",
    "release:production": "npm run prepare && npm run docs",

    "docs": "./node_modules/.bin/jsdoc -c ./jsdoc_conf.json -t ./node_modules/ink-docstrap/template -d docs/ -R README.md -r src/",
    "docs:deploy": "./node_modules/.bin/gh-pages -d docs",
    "gh-pages-travis": "gh-pages-travis",

    "commit": "./node_modules/.bin/git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "author": "Zalando SE",
  "maintainers": [
    {
      "name": "Ahmed Shehata",
      "email": "ahmed.shehata@zalando.de",
      "web": "https://github.com/ahmed-shehata"
    },
    {
      "name": "Gleb Galkin",
      "email": "gleb.galkin@zalando.de",
      "web": "https://github.com/artdaw"
    }
  ],
  "pre-commit": [
    "validate"
  ],
  "dependencies": {
    "isomorphic-fetch": "2.2.1"
  },
  "devDependencies": {
    "babel-core": "6.21.0",
    "babel-register": "6.18.0",
    "babel-runtime": "6.20.0",
    "babel-eslint": "7.1.1",
    "babel-polyfill": "6.20.0",
    "babel-plugin-transform-function-bind": "^6.8.0",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-transform-es2015-modules-umd": "6.18.0",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-stage-0": "6.16.0",
    "eslint": "^3.13.1",
    "eslint-loader": "^1.6.1",
    "webpack": "^1.14.0",
    "webpack-merge": "2.6.1",
    "babel-loader": "6.2.10",
    "json-loader": "0.5.4",
    "node-noop": "*",
    "ava": "0.17.0",
    "tap-diff": "0.1.1",
    "tap-notify": "1.0.0",
    "chalk": "1.1.3",
    "fetch-mock": "5.9.3",
    "codecov": "1.0.1",
    "nsp": "^2.2.0",
    "nyc": "10.0.0",
    "pmm": "^1.3.0",
    "cz-conventional-changelog": "1.2.0",
    "pre-commit": "^1.2.2",
    "jsdoc": "3.4.3",
    "jsdoc-babel": "0.3.0",
    "ink-docstrap": "1.3.0",
    "gh-pages": "0.12.0",
    "gh-pages-travis": "1.0.0",
    "semantic-release": "^6.3.5",
    "commitizen": "2.9.5",
    "david": "9.0.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "babel": "inherit",
    "require": "babel-register",
    "concurrency": 2,
    "tap": true
  }
}
